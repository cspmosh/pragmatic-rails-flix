
<% @movies.each do |movie| %>
  <section class="movie">
    <div class="summary">
      <h2>
        <%= movie.name %>
      </h2>
      <h3>
        <%= gross(movie) %>
      </h3>
      <p>
        <%= truncate(movie.description, length: 40, separator: ' ') %>
      </p>
    </div>
  </section>
<% end %>
