<section class="movie-details">
  <div class="image">
    <%= image_tag @movie.image_file_name %>
    <div class="faves">
      <%= fave_or_unfave_button(@movie, @favorite) %>
      <div class="count">
        <%= @movie.favorites.size %>
      </div>
    </div> 
  </div>

  <div class="details">
    <h1><%= @movie.name %></h1>
    <h2>
      <%= year_of(@movie) %> &bull; <%= @movie.rating %>
    </h2>

    <div class="reviews">
      <span class="stars">
        <%= render "shared/stars", percent: @movie.average_stars_as_percent %>
      </span>
      <%= link_to pluralize(@movie.reviews.size, "Review"), movie_reviews_path(@movie) %>
    </div>
    <p>
      <%= @movie.description %>
    </p>

    <table>
      <tr>
        <th>Director:</th>
        <td><%= @movie.director %></td>
      </tr>
      <tr>
        <th>Duration:</th>
        <td><%= @movie.duration %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= gross(@movie) %></td>
      </tr>
    </table>
  </div>

  <aside>
    <% if @fans.present? %>
      <h4>Fans</h4>
      <ul>
        <% @fans.each do |user| %>
          <li>
            <%= profile_image(user, size: 35) %>
            <%= link_to user.username, user %>
          </li>
        <% end %>
      </ul>
    <% end %>
    <% if @genres.present? %>
      <h4>Genres</h4>
      <ul>
        <% @genres.each do |genre| %>
          <li>
            <%= genre.name %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </aside>
</section>

<% if current_user_admin? %>
  <section class="admin">
    <%= link_to "Edit", edit_movie_path(@movie), class: "button" %>
    <%= link_to "Delete", 
      @movie, 
      class: "button", 
      method: :delete,
      data: { confirm: 'Are you sure?' } %>
  </section>
<% end %>